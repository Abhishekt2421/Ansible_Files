<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Activities</title>
    <style>
      table { border-collapse: collapse; width: 100%; }
      th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
      th { background: #f2f2f2; }
    </style>
  </head>
  <body>
    <h1>Activities</h1>
    <table>
      <thead>
        <tr><th>ID</th><th>Title</th><th>Due</th><th>Completed</th></tr>
      </thead>
      <tbody>
      {% for item in activities %}
        {% set id_val = item.get('id') | default(item.get('Id')) | default(item.get('ID')) %}
        {% set title_val = item.get('title') | default(item.get('Title')) | default(item.get('Title')) %}
        {% set due_val = item.get('dueDate') | default(item.get('DueDate')) | default(item.get('Due')) %}
        {% set comp_val = item.get('completed') | default(item.get('Completed')) | default(item.get('completed')) %}
        <tr>
          <td>{{ id_val }}</td>
          <td>{{ title_val }}</td>
          <td>{{ due_val }}</td>
          <td>{{ comp_val }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </body>
</html>
